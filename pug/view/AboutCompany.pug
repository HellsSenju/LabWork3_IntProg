html(lang="ru" class="h-100")

head
    meta(charset="utf-8")
    title GAS&OIL
    meta(name="viewport" content="width=device-width, initial-scale=1")
    block scripts
    script(src="node_modules/bootstrap/dist/js/bootstrap.min.js")
    script(src="node_modules/handlebars/dist/handlebars.min.js")
    block styles
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" 
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")

        link(rel="stylesheet" href="css/body1.css")
        link(rel="stylesheet" href="css/header.css")
        link(rel="stylesheet" href="css/footer.css")
        link(rel="stylesheet" href="css/navigation.css")

    block variables


body(class="d-flex flex-column h-100")
    header(img align="left" src = "Logo.png"  width="115" height="110"
            h1 
        <h1>Великая нефтегазовая</h1>
        <h2>GAS&OIL</h2>)
        
        nav(class="navbar navbar-expand-md navbar-dark")
            div(class="container-fluid")
                a(class="navbar-brand" href="/") <i class="fa-solid fa-microchip"></i> Мой сайт
                button(
                    class="navbar-toggler" 
                    type="button" 
                    data-bs-toggle="collapse" 
                    data-bs-target="#navbarNav"
                    aria-controls="navbarNav" 
                    aria-expanded="false" 
                    aria-label="Toggle navigation"
                ) span(class="navbar-toggler-icon")
                div#navbarNav(class="navbar-collapse collapse justify-content-end")
                    div(class="navbar-nav")
                        -
                            const links = [
                                {url: "index.html", caption: "Главная страница"},
                                {url: "second.html", caption: "Вторая страница"},
                                {url: "js1.html", caption: "Валидация форм"},
                                {url: "js2.html", caption: "Бизнес-логика на клиенте"}
                            ]
                        each val in links
                            a(
                                href=val.url 
                                class="nav-link" 
                                class=currentPage === val.url ? "active" : ""
                            )=val.caption
    main(class="flex-shrink-0")
        block content
    footer(class="footer mt-auto d-flex justify-content-center align-items-center") Автор, 2022
    block body-scripts 